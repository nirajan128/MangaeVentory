@model Category

<!--Uses template from _viewstart which inport template from _layout-->
@section title{
	@if(Model != null){
		<h3>Category: @Model.Name</h3>
	}

	<form method="POST" asp-controller="Categories" asp-action="Edit">
		<input type="hidden" asp-for="CategoryId" />
		<div class="row mb-3">
			<div class="col-2">
				<!--The asp-for gets the value of the Name of the object seected-->
				<label class="col-form-label" asp-for="Name"></label>
			</div>

			<div class="col-6">
				<input type="text" asp-for="Name" class="form-control" />
			</div>
		</div>

		<div class="row mb-3">
			<div class="col-2">
				<label class="col-form-label" asp-for="Description"></label>
			</div>

			<div class="col-6">
				<input type="text" asp-for="Description" class="form-control" />
			</div>
		</div>

		<div class="row mb-3">
			<div class="col-2">
			      <input type="submit" class="btn btn-primary" value="Save" />
			</div>

			<div class="col-6">
				
			</div>
		</div>
	</form>
	
}

	